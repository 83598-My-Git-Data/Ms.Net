@model List<WebApplication1.Models.Bus>
<html>
<head>
    <title>Bus Booking App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <h1>Choose A Bus to check Availability</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Bus ID</th>
                    <th>Bus Number</th>
                    <th>Capacity</th>
                    <th>Bus Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BusId</td>
                        <td>@item.BusNumber</td>
                        <td>@item.Capacity</td>
                        <td>@item.BusType</td>
                        <td>
                            <a class="btn btn-primary"
                               href="/Home/Seat/@item.BusId">Select</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-dark" href="/Home/Register">Register Here!</a><br /> <br />
        <a class="btn btn-dark" href="/Home/Login">Login Here!</a>
    </div>
</body>
</html>